<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_30sdp"
    android:background="@drawable/prp_back"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/watermark"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_vertical"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/property_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_weight="1"
                        android:text="Prop Id: "
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <ImageView
                        android:id="@+id/show_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_outline_image_24"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:id="@+id/edit_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:id="@+id/edit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_baseline_edit_24"
                            android:text="   Edit    "
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="visible"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/delete"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_baseline_delete_24"
                            android:text="  Delete  "
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="visible"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@+id/menu"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_baseline_more_vert_24"
                            android:visibility="gone"
                            app:tint="@color/blackmain"
                            tools:ignore="ContentDescription"
                            tools:visibility="visible" />

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/fav"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_favourite"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:padding="2dp"
                        android:src="@drawable/ic_baseline_share_24"
                        android:visibility="gone"
                        app:tint="@color/blackmain"
                        tools:ignore="ContentDescription"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/shareWhatsUp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:padding="2dp"
                        android:src="@drawable/whatsapp"
                        android:visibility="gone"
                        tools:ignore="ContentDescription"
                        tools:visibility="visible" />

                </LinearLayout>
            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingEnd="5dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:text="Loading.sdfdfsdf gjhsgf jhgsdjfh        gs jhhsgfjd hg.."
                android:textColor="@color/blackmain"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                tools:ignore="UnusedAttribute" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/description"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:breakStrategy="simple"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:text="Loading"
                android:textColor="@color/blackmain"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:targetApi="o" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/arial"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="italic"
                tools:text="Note" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvAskingPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/arial"
                    android:text="Asking Price:-"
                    android:textColor="@color/blackmain"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="10dp"
                    android:text="Loading..."
                    android:textColor="@color/blackmain"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/seller_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/arial"
                    android:text="Loading..."
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="italic" />


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/uplodede_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="vijay"
                android:textAllCaps="true"

                android:textColor="@color/gnt_red"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/visitingcard"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_70sdp"
        android:src="@drawable/visiting_card"
        android:visibility="gone"
        tools:visibility="visible"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text=""
        android:textStyle="italic" />

</LinearLayout>
